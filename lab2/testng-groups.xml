<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="BubbleSort Test Suite" verbose="2">
    <test name="Sorting Tests">
        <groups>
            <run>
                <include name="sorting"/>
            </run>
        </groups>
        <classes>
            <class name="com.example.BubbleSortTestNG"/>
        </classes>
    </test>
    <test name="Exception Tests">
        <groups>
            <run>
                <exclude name="sorting"/>
                <include name="exceptions"/>
            </run>
        </groups>
        <classes>
            <class name="com.example.BubbleSortTestNG"/>
        </classes>
    </test>
</suite>
